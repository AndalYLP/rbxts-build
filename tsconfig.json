{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "ES2019",
		"lib": ["ES2019"],
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true,
		"composite": true,
		"sourceMap": true,
		"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",

		"rootDir": "src",
		"outDir": "out"
	}
}
